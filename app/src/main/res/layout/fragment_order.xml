<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorNavIcon"
    tools:context=".fragments.OrderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Orders"
            android:textSize="19sp"
            android:padding="22dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/sfpro_display_semibold"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="15dp">
            <TextView
                android:id="@+id/alltime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_lite_gray_roundshape"
                android:fontFamily="@font/sfpro_display_semibold"
                android:textAlignment="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="All time"
                android:textColor="@color/gray"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/today"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_lite_gray_roundshape"
                android:fontFamily="@font/sfpro_display_semibold"
                android:textAlignment="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="Today"
                android:textColor="@color/gray"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/yesterday"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_lite_gray_roundshape"
                android:fontFamily="@font/sfpro_display_semibold"
                android:textAlignment="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="Yesterday"
                android:textColor="@color/gray"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/this_week"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_lite_gray_roundshape"
                android:fontFamily="@font/sfpro_display_semibold"
                android:textAlignment="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="This Week"
                android:textColor="@color/gray"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/this_month"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_lite_gray_roundshape"
                android:fontFamily="@font/sfpro_display_semibold"
                android:textAlignment="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="This Month"
                android:textColor="@color/gray"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/last_month"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_lite_gray_roundshape"
                android:fontFamily="@font/sfpro_display_semibold"
                android:textAlignment="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="Last month"
                android:textColor="@color/gray"
                android:textSize="17sp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:gravity="center">
        <ImageView
            android:id="@+id/empty_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_workspace"/>
        <TextView
            android:id="@+id/txt_emty"
            android:layout_below="@+id/empty_img"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="You don't have any active orders."/>
        <TextView
            android:id="@+id/emty_desc"
            android:layout_below="@+id/txt_emty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:text="@string/empty_desc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emty_desc"
            android:textColor="@color/white"
            android:text="Share Store"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sfpro_display_semibold"
            android:background="@drawable/btn_navitext_color_bkg"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>