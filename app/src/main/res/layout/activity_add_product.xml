<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.AddProductActivity">

    <include layout="@layout/toolbar_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:gravity="center"
            android:layout_above="@+id/or"
            android:fontFamily="@font/sfpro_display_regular"
            android:hint="Enter Product Name"/>
        <TextView
            android:id="@+id/or"
            android:layout_above="@+id/ready_catlog"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="OR"
            android:fontFamily="@font/sfpro_display_regular"
            android:textSize="21sp"
            android:textColor="@color/gray"/>

        <LinearLayout
            android:id="@+id/ready_catlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bkg_rect"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_laptop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:text="Readymade Catalogue"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:textColor="@color/gray"
                    android:padding="10dp"
                    android:text="Choose from thousands of ready-to-add \n products and starts selling to your\ncustomers"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/continue_btn"
            android:layout_below="@+id/ready_catlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Continue"
            android:textSize="21sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sfpro_display_semibold"
            android:background="@drawable/btn_navitext_color_bkg"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"/>

    </RelativeLayout>





</LinearLayout>