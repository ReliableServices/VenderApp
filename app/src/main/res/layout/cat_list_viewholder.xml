<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cat_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <ImageView
                android:id="@+id/product_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="7dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_whatsapp"/>
            <LinearLayout
                android:id="@+id/lnr_comb"
                android:layout_toRightOf ="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_display_semibold"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:text="1 ITEM"/>
                <TextView
                    android:id="@+id/piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_display_semibold"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:text="1 piece"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:textSize="12sp"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:text="\u20B9 400"/>

                    <TextView
                        android:id="@+id/p_mrp_price"
                        android:layout_toRightOf="@+id/item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:background="@drawable/rupees_cross_line"
                        android:textSize="12sp"
                        android:padding="3dp"
                        android:textColor="@color/gray"
                        android:text="\u20B9 500"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/in_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_display_semibold"
                        android:textSize="14sp"
                        android:padding="3dp"
                        android:textColor="@color/green"
                        android:text="@string/in_stock"/>

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        tools:ignore="UseSwitchCompatOrMaterialXml"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_below="@+id/lnr_comb"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/extra_lite_gray"/>
            <TextView
                android:id="@+id/txt_share"
                android:layout_below="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_display_semibold"
                android:textSize="16sp"
                android:paddingTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/gray"
                android:drawablePadding="5dp"
                android:text="@string/share_product"
                app:drawableStartCompat="@drawable/ic_baseline_share_24" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>