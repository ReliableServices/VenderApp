<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.PurchaseStockActivity">

    <include layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_prod"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/btn_border_roundshap"/>
            <TextView
                android:id="@+id/img_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:textSize="14sp"
                android:fontFamily="@font/sfpro_display_regular"
                android:text="Add product images (up to 8)"
                android:paddingLeft="10dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:hint="Supplier Name"
                    />
                <ImageView
                    android:id="@+id/add_supplier"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_addfile"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:hint="Item Description"
                    />
                <ImageView
                    android:id="@+id/Add_item"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_addfile"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/broker_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="PO Date*"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/qty"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="PO No."/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/item_comp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:hint=" Broker Name"
                    />
                <ImageView
                    android:id="@+id/add_comp_name"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_addfile"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/p_mrp_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mrp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="Invoice To"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sell_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="Branch Name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/broker_name_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/po_validity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="PO Validity"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/qtys"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="QTY"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/qty_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="18dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="Rate*"/>
                </com.google.android.material.textfield.TextInputLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint=" "/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:entries="@array/unit"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:hint=" "/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="24dp"
                    android:entries="@array/packaging"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/prod_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:hint="Brokerage Rate"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/delivery_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:hint="Delivery Time"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/delivery_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:hint="Delivery Date"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/amout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_display_regular"
                    android:hint="Amount"/>
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/variant_btn"
                android:background="@color/gery_inactive"/>
            <TextView
                android:id="@+id/btn_addProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:fontFamily="@font/sfpro_display_bold"
                android:text="ADD PRODUCT"
                android:layout_margin="15dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_navitext_color_bkg"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>