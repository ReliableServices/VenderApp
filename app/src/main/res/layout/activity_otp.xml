<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/otp_image"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/otp_screen_image"/>

    <TextView
        android:id="@+id/otp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/sfpro_display_medium"
        android:text="Enter OTP"
        android:textColor="@color/purple_500"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/otp_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpro_display_medium"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/blue_color"
        android:layout_marginTop="10dp"
        android:text="We have sent you an OTP \n for mobile number verification"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/otp_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="28dp"
        android:fontFamily="@font/sfpro_display_medium"
        android:hint="Enter OTP"
        android:inputType="number"
        android:padding="16dp"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/btn_bkg_rect"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/otp_text_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/sfpro_display_medium"
        android:hint="Enter OTP"
        android:inputType="number"
        android:padding="16dp"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/btn_bkg_rect"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_navitext_color_bkg"
        android:fontFamily="@font/sfpro_display_medium"
        android:text="Verify OTP"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/otpResend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/sfpro_display_medium"
        android:text="OTP Resend"
        android:layout_gravity="right"
        android:textSize="15sp"
        android:padding="15dp"
        android:textColor="@color/purple_500"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12.7sp"
        android:layout_gravity="center"
        android:text="55 Sec"
        android:padding="10dp"
        android:id="@+id/countDown"
        android:fontFamily="@font/sfpro_display_medium"
        android:textStyle="bold"
        android:textColor="@color/purple_200"/>

    <ProgressBar
        android:id="@+id/otp_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        />


</LinearLayout>