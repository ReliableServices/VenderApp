<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNavIcon"
    tools:context=".activitys.CreateCategoryActivity">

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_below="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            app:cardCornerRadius="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_display_medium"
                    android:padding="15dp"
                    android:textSize="17sp"
                    android:text="Create  Category"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cat_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="Category Name*"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selling_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:layout_margin="10dp"
                            android:paddingBottom="20dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sfpro_display_regular"
                            android:hint="HSN CODE"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
           <!--     <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:background="@drawable/btn_bkg_rect"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_margin="12dp"
                    android:text="Add another Charge"/>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="7dp"
            app:cardCornerRadius="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_medium"
                        android:padding="15dp"
                        android:textSize="17sp"
                        android:text="GST"/>
                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="7dp"
                        android:layout_margin="20dp"
                        tools:ignore="UseSwitchCompatOrMaterialXml"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cgst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="CGST*"
                        android:layout_margin="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sgst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="SGST*"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/p_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sfpro_display_regular"
                        android:hint="IGST*"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
      <TextView
          android:id="@+id/add_category"
          android:layout_below="@+id/linear_layout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:background="@drawable/btn_navitext_color_bkg"
           android:paddingStart="30dp"
          android:paddingEnd="30dp"
          android:paddingTop="15dp"
          android:paddingBottom="15dp"
          android:text="Add Category"
          android:textColor="@color/white"
          android:textSize="16sp"
          android:fontFamily="@font/sfpro_display_medium"
          android:layout_centerHorizontal="true"
          android:textAlignment="center"/>
</RelativeLayout>