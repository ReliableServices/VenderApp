<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.VenderRegistrationActivity">
    <include layout="@layout/toolbar_layout"/>
<ScrollView
    android:layout_below="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/bussiness_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:lines="1"
                android:textColor="@color/black"
                android:inputType="text"
                android:fontFamily="@font/sfpro_display_regular"
                android:hint="Business Name "/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobile_num_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/mobile_nume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:inputType="number"
                android:lines="1"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_display_regular"
                android:hint="Mobile Number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cont_prson_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/contact_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_display_regular"
                android:hint="Contact Person Name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:lines="1"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_display_regular"
                android:hint="Enter Email Id"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:inputType="number"
                android:lines="1"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_display_regular"
                android:hint="Pincode"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/state_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:inputType="text"
                android:lines="1"
                android:editable="false"
                android:clickable="true"
                android:textColor="@color/black"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/sfpro_display_regular"
                android:hint="State Name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:lines="1"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_display_regular"
                android:hint="City Name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/full_Address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:inputType="text"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_display_regular"
                android:hint="Full Address"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/sfpro_display_medium"
            android:background="@drawable/btn_status_background"
            android:text="Finish"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>


</RelativeLayout>