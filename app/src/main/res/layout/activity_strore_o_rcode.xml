<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activitys.StroreORcode">

    <include layout="@layout/toolbar_layout"/>
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:elevation="11dp"
        app:cardCornerRadius="7dp"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:background="@color/colorNavText"
           android:orientation="vertical"
           android:weightSum="1">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:textSize="21sp"
               android:textAlignment="center"
               android:fontFamily="@font/sfpro_display_regular"
               android:text="We support"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:textSize="24sp"
               android:textAlignment="center"
               android:fontFamily="@font/sfpro_display_heavy"
               android:text="#DigitalIndia"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:textSize="14sp"
               android:textAlignment="center"
               android:fontFamily="@font/sfpro_display_regular"
               android:text="Scan QR to check our products"/>

       </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
         android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sfpro_display_semibold"
        android:background="@color/colorNavText"
        android:layout_centerInParent="true"
        android:text="Print PDF"/>
</RelativeLayout>